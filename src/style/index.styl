// 字体统一导入
body
  margin: 0
  font-family: Helvetica Neue,Helvetica,PingFang SC,Hiragino Sans GB,Microsoft YaHei,SimSun,sans-serif

// 表单
.form
  background: #eef1f6
  .form-header
    padding-left: 1rem
    height: 40px
    line-height: 40px
    background: #99A9BF
    border-radius: 4px 4px 0 0
  .form-content
    padding: 20px 20px 10px 20px

// 头像上传
.avatar-uploader
  .el-upload
    border: 1px dashed #d9d9d9
    border-radius: 6px
    cursor: pointer
    position: relative
    overflow: hidden

.avatar-uploader
  .el-upload:hover
    border-color: #20a0ff

.avatar-uploader-icon
  font-size: 28px
  color: #8c939d
  width: 178px
  height: 178px
  line-height: 178px
  text-align: center

.avatar
  width: 178px
  height: 178px
  display: block
